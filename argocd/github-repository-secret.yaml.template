apiVersion: v1
kind: Secret
metadata:
  name: github-repo-secret
  namespace: argocd
  labels:
    argocd.argoproj.io/secret-type: repository
type: Opaque
stringData:
  type: git
  url: https://github.com/${GITHUB_USERNAME}/${GITHUB_REPO}.git
  username: ${GITHUB_USERNAME}
  password: GITHUB_PAT_PLACEHOLDER
